<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update User</h2>
      <span class="text-light">Use the below form to Update an account</span>
    </div>

    <!-- add user form -->
    <!-- form handling -->
    <form action="/api/books" method="POST" id="update_book">
      <div class="new_user">
        <div class="form-group">
          <label for="book" class="text-light">Book Title</label>
          <input type="hidden" name="id" value="<%= book._id %>" />
          <input
            type="text"
            name="book"
            value="<%= book.book %>"
            placeholder="Pride and Prejudice"
            required
          />
        </div>
        <div class="form-group">
          <label for="author" class="text-light">Author</label>
          <input
            type="text"
            name="author"
            value="<%= book.author %>"
            placeholder="Jane Austen"
            required
          />
        </div>
        <div class="form-group">
          <label for="genre" class="text-light">Genre</label>
          <input
            type="text"
            name="genre"
            value="<%= book.genre %>"
            placeholder=""
            required
          />
        </div>

        <div class="form-group">
          <label for="year" class="text-light">Year of Publication</label>
          <input
            type="date"
            name="year"
            value="<%= book.year %>"
            placeholder=""
            required
          />
        </div>
        <div class="form-group">
          <label for="isbn" class="text-light">isbn</label>
          <input
            type="text"
            name="isbn"
            value="<%= book.isbn %>"
            placeholder=""
            required
          />
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
