<!-- INCLUDE HEADER -->
<%-include('include/_header')%>
<!-- INCLUDE HEADER -->

<!-- Main Site -->
<main id="site-main" role="main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/add-book" class="border-shadow">
        <span class="text-gradient"
          >Add Book <i class="fas fa-book" aria-hidden="true"></i
        ></span>
      </a>
    </div>

    <!-- form handling -->
    <form action="/" method="POST" aria-label="Add Book Form">
      <table class="table" role="table" aria-label="Books table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Book Title</th>
            <th scope="col">Author</th>
            <th scope="col">Genre</th>
            <th scope="col">Year of Publication</th>
            <th scope="col">ISBN</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <%- include('include/_show')%>
        </tbody>
      </table>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- INCLUDE Footer -->
<%-include('include/_footer')%>
<!-- INCLUDE Footer -->
